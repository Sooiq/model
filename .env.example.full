# ============================================================================
# SOOIQ Model - Full Environment Configuration Template
# ============================================================================
# Copy .env.example to .env and fill in your actual values
# DO NOT commit .env to version control!
# 
# For hackathon: Use the simplified .env file
# For production: Use this full template

# ============================================================================
# API Keys
# ============================================================================

# NewsAPI (https://newsapi.org/)
NEWS_API_KEY=your_newsapi_key

# Twitter API (if using social sentiment)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Reddit API (if using)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SOOIQ_Model/1.0

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL/TimescaleDB
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sooiq_db
DB_USER=postgres
DB_PASSWORD=secure_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# Qlib Configuration
# ============================================================================

QLIB_DATA_PATH=./data/qlib_data
QLIB_PROVIDER_URI=~/.qlib/qlib_data/us_data

# ============================================================================
# Model Configuration
# ============================================================================

# HuggingFace
HF_TOKEN=your_huggingface_token  # Optional, for private models
FINBERT_MODEL=ProsusAI/finbert

# Model paths
MODEL_SAVE_PATH=./models
CHECKPOINT_PATH=./models/checkpoints

# ============================================================================
# MLflow Configuration
# ============================================================================

MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=sooiq-model

# ============================================================================
# API Configuration
# ============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# JWT Secret for API authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Market-Specific Configuration
# ============================================================================

# Default market
DEFAULT_MARKET=US

# Supported markets (comma-separated)
SUPPORTED_MARKETS=US,Korea,Indonesia,China,UK

# ============================================================================
# Data Collection Configuration
# ============================================================================

# Data update frequency (in hours)
DATA_UPDATE_FREQUENCY=1

# Historical data start date
HISTORICAL_START_DATE=2010-01-01

# News retention period (in days)
NEWS_RETENTION_DAYS=90

# ============================================================================
# Training Configuration
# ============================================================================

# Random seed for reproducibility
RANDOM_SEED=42

# GPU configuration
USE_GPU=true
GPU_DEVICE=0

# Batch size
BATCH_SIZE=32

# Number of epochs
NUM_EPOCHS=100

# Early stopping patience
EARLY_STOPPING_PATIENCE=10

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=./logs/sooiq.log

# ============================================================================
# Monitoring
# ============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# ============================================================================
# Development
# ============================================================================

DEBUG=false
TESTING=false
